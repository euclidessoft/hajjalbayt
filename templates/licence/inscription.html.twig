{% extends "licence.html.twig" %}
{% block title %} Inscription - Hajjalbayt {% endblock %}
{% block body %}

<div class="container-fluid banner">
    <div class="row">
        <img src="images/market/Banner.jpg" alt="Banner" class="img-fluid w-100">
    </div>
</div>
<div class="container-fluid bg-success-light">
    <div class="col-lg-12 mb-5">
        <div class="row mb-5">
            <div class="col-lg-6 mt-5 left-pan">
                <h4 class="mb-3 text-center text-green text-bold">HAJJALBAYT by EUCLIDES</h4>
                <img src="images/market/left-pan.jpg" alt="image" class="img-fluid align-center w-95">
            </div>
            <div class="col-lg-6 mt-5 text-center">
                <div class="col-sm-10 offset-sm-1 login">
                    <div class="col-10 offset-1 mt-5 mb-4">
                        <h4 class="mb-5 text-green text-bold">Inscription</h4>
                        {{ form_start(form)}}
                        <div class="form-group mt-4">
                            {{form_row(form.nom, {'label': false, 'attr': {'placeholder':'Nom de l\'agence'}})}}
                        </div>
                        <div class="form-group mt-4">
                            {{form_row(form.responsable, {'label': false, 'attr': {'placeholder':'Nom du responsable'}})}}
                        </div>
                        <div class="form-group mt-4">
                            {{form_row(form.phone, {'label': false, 'attr': {'placeholder':'Numéro téléphone'}})}}
                        </div>
                        <div class="form-group mt-4">
                            {{form_row(form.email, {'label': false, 'attr': {'placeholder':'Adresse email'}})}}
                        </div>
                        <div class="form-group mt-3">
                            <div class="text-nowrap">
                                <input type="checkbox" id="termes" onclick="accepte()">
                                <label for="termes">
                                    J'accepte les <a href="#" class="text-green text-bold font-italic">termes et conditions</a> <b>*</b>
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-shadow btn-green radius-15 pl-4 pr-4 disabled" id="incription">
                            <h5 class="text-bold">
                                S'inscrire <i class="fa fa-chevron-circle-right ml-1 align-middle"></i>
                            </h5>
                        </button>
                        {{form_rest(form)}}
                        {{form_end(form)}}
                    </div>
                    <p class="text-center text-bold privacy">
                        * Vous devez accepter les termes et conditions pour valider votre inscription
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
