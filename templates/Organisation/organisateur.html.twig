{% block body %}
	<div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header"> organisateur </h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
				<div class="row">
                <div class="col-lg-10 col-sm-offset-1">
				
				<div class="panel panel-info">
                        <div class="panel-heading">
                            <i class="fa fa-info-circle"></i> Informations organisateur
                        </div>
						
                        <!-- .panel-heading -->
                        <div class="panel-body">
							<div class="panel panel-primary">
							<div class="panel-heading">
								<i class="fa fa-info-circle"></i> Operation
							</div>
							<div class="panel-body">
							<a href="{{ path('Mecque_OrganisateurEdit', { id : organisateur.id}) }}" class="btn btn-primary"><i class="fa fa-edit"></i> Modifier Organisateur </a>
							<a href="{{ path('Mecque_OrganisateurAdd') }}" class="btn btn-success"><i class="fa fa-male"></i> Nouvel Organisateur </a>
							<button class="btn btn-danger pull-right" id="supp{{ organisateur.id}}" onclick="supprimorganisateur({{organisateur.id}})"><i class="fa fa-trash"></i> Supprimer</button>
							</div>
							  </div>
							
							
							<div class="panel panel-success">
                                    <div class="panel-heading">
                                     <i class="fa fa-credit-card"></i> Identit&eacute;</a>
                                      
                                    </div>
                                        <div class="panel-body">
										<div class="row">
										<div class="col-sm-4">
                                             
											<ul class="list-unstyled">
												<li> Civilite :</li>
												<li> Prenom :</li>
												<li> Nom :</li>
												<li> Date de naissance : </li>
												<li> Lieu de Naissance : </li>
												<li> Nº Passeport : </li>
												<li> Groupe Sanguin : </li>
												<li> Taxe saoudiene : </li>
												<li> Telephone Pelerin : </li>
												<li> Telephone Famille : </li>
												<li> Adresse : </li>
											</ul>
										</div>
										<div class="col-sm-4">
											<ul class="list-unstyled">
												<li><b> {% if organisateur.sexe == 'Feminin' %} Madame {% else %} Monsieur {% endif %}</b></li>
												<li><b> {{ organisateur.prenom}} </b></li>
												<li><b> {{ organisateur.nom}} </b></li>
												<li><b> {{ organisateur.datenaiss|date('d/m/Y')}} </b></li>
												<li><b> {% if organisateur.lieunaiss is empty %} - {% else %}{{ organisateur.lieunaiss}} {% endif %}</b></li>
												<li><b> {% if organisateur.numpassport is empty %} - {% else %}{{ organisateur.numpassport }} {% endif %}</b></li>
												<li><b> {% if organisateur.bloodgroup is empty %} - {% else %}{{ organisateur.bloodgroup}} {% endif %}</b></li>
												<li><b> {% if organisateur.numsaoudiantax is empty %} - {% else %}{{ organisateur.numsaoudiantax}} {% endif %}</b></li>
												<li><b> {% if organisateur.phone is empty %} - {% else %}{{ organisateur.phone}} {% endif %}</b></li>
												<li><b> {% if organisateur.famillyphone is empty %} - {% else %}{{ organisateur.famillyphone}} {% endif %}</b></li>
												<li><b> {% if organisateur.adresse is empty %} - {% else %}{{ organisateur.adresse}} {% endif %}</b></li>
											</ul>
										</div>
										<div class="col-sm-4">
											{% if organisateur.image is not empty %}
												<img src="{{ asset('images/'~ organisateur.image.url)}}" alt="{{ organisateur.image.alt}}" class="rounded-circle" />
												&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
												&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
												<button type='button' class='btn btn-primary' id="selectimage" onclick="selectphoto()" style="margin-top:15px;"><i class='fa fa-edit'></i> <i class='fa fa-image'></i> Modifier photo </button>
												{{ form_start(form, {'attr': {'id': 'form'}}) }}
												{{ form_widget(form.file)}}
												{{ form_rest(form) }}
												{{ form_end(form) }}
											{% else %}
												<img src="{{ asset('images/avatar.jpg')}}" alt="Photo pèlerin" class="rounded-circle" /></br>
												&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
												&nbsp;&nbsp;&nbsp;&nbsp;
												<button type='button' class='btn btn-success' id="selectimage" onclick="selectphoto()" style="margin-top:15px;"><i class='fa fa-image'></i> Ajouter photo </button>
												{{ form_start(form, {'attr': {'id': 'form'}}) }}
												{{ form_widget(form.file)}}
												{{ form_rest(form) }}
												{{ form_end(form) }}
											{% endif %}
											</div>
											</div>
											</div>
                                    </div>
									
									<div class="panel panel-success">
                                    <div class="panel-heading">
                                     <i class="fa fa-credit-card"></i> Formalit&eacute;</a>
                                      
                                    </div>
                                        <div class="panel-body">
										<div class="row">
										<div class="col-lg-12">
										</div>
										</div>
										</div>
										</div>
							
                           
                        </div>
