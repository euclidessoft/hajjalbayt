{% extends "layout.html.twig" %}
{% block pelerin %} class="nav-item dropright active" {% endblock %}
{% block body %}
	<div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">{{ 'Enregistrement Guide'|trans }}</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
				<div class="row">
				<div class="col-lg-2">
				</div>
                <div class="col-lg-8">
				<!-- cadrage formoulaire  --> 
                    <div class="panel panel-info">
                        <div class="panel-heading">
                           {{ ' Guide'|trans }}
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-8 offset-lg-2">
								
                                  {{form_start(form, {'attr':{'id': 'form'}})}}
										
										
                                        <div class="form-group">
                                            <label>{{ 'Prénom'|trans }} :</label>
                                            {{ form_widget(form.prenom)}}
                                            {{ form_errors(form.prenom)}}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ 'Nom'|trans }} :</label>
                                            {{ form_widget(form.nom)}}
                                            {{ form_errors(form.nom)}}
                                        </div>
										<div class="form-group">
                                            <label>{{ 'Date de naissance'|trans }} :</label>
                                            {{ form_widget(form.datenaiss)}}
                                            {{ form_errors(form.datenaiss)}}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ 'Lieu de naissance'|trans }} :</label>
                                            {{ form_widget(form.lieunaiss)}}
                                            {{ form_errors(form.lieunaiss)}}
                                        </div>
										<div class="form-group">
                                            <label>{{ 'Sexe'|trans }} :</label>
                                            {{ form_widget(form.sexe)}}
                                            {{ form_errors(form.sexe)}}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ 'Nº Passeport'|trans }} :</label>
                                            {{ form_widget(form.numpassport)}}
                                            {{ form_errors(form.numpassport)}}
                                        </div>
										<div class="form-group">
                                            <label>{{ 'Groupe sanguin'|trans }} :</label>
                                            {{ form_widget(form.bloodgroup)}}
                                            {{ form_errors(form.bloodgroup)}}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ 'Adresse'|trans }} :</label>
                                            {{ form_widget(form.adresse)}}
                                            {{ form_errors(form.adresse)}}
                                        </div>
										<div class="form-group">
                                            <label>{{ 'Téléphone Pèlerin'|trans }} :</label>
                                            {{ form_widget(form.phone)}}
                                            {{ form_errors(form.phone)}}
                                        </div>
										<div class="form-group">
                                            <label>{{ 'Téléphone Famille'|trans }} :</label>
                                            {{ form_widget(form.famillyphone)}}
                                            {{ form_errors(form.famillyphone)}}
                                        </div>
										<button type="button" class="btn btn-success" id="send" onclick="envoie()"><i class="fa fa-save"></i> {{ 'Enregistrer'|trans }}</button>
										{{ form_rest(form) }}
                                        <button type="reset" class="btn btn-default"><i class="fa fa-undo"></i>  {{ 'Effacer'|trans }}</button>
                                        </div>
                                        
                                    {{ form_end(form) }}
                                </div>
                                <!-- /.col-lg-8 (nested) -->
								<div class="col-lg-2">
								</div>
                            </div>
                            <!-- /.row (nested) -->
                        </div>
						<!-- fin cadrage formulaire --> 
                        <!-- /.panel-body -->
                    </div>
                    <div class="col-lg-2">
				</div>
                </div>
{% endblock %}