{% extends "layout.html.twig" %}
{% block pelerin %} class="nav-item dropright active" {% endblock %}
{% block body %}
	<div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header"> Medecin </h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
				<div class="row">
                <div class="col-lg-10 col-sm-offset-1">
				
				<div class="panel panel-info">
                        <div class="panel-heading">
                            <i class="fa fa-info-circle"></i> Informations medecin
                        </div>
						
                        <!-- .panel-heading -->
                        <div class="panel-body">
							<div class="panel panel-primary">
							<div class="panel-heading">
								<i class="fa fa-info-circle"></i> Operation
							</div>
							<div class="panel-body">
							<a href="{{ path('Mecque_MedecinEdit', { id : medecin.id}) }}"><button class="btn btn-primary"><i class="fa fa-edit"></i> Modifier Medecin</button> </a>
							<a href="{{ path('Mecque_MedecinAdd') }}"><button class="btn btn-success pull-right"> <i class="fa fa-male"></i> Nouveau Medecin</button></a>
							</div>
							  </div>
							
							
							<div class="panel panel-success">
                                    <div class="panel-heading">
                                     <i class="fa fa-credit-card"></i> Identit&eacute;</a>
                                      
                                    </div>
                                        <div class="panel-body">
										<div class="row">
										<div class="col-sm-4">
                                             
											<ul class="list-unstyled">
												<li> Civilite :</li>
												<li> Prenom :</li>
												<li> Nom :</li>
												<li> Date de naissance : </li>
												<li> Lieu de Naissance : </li>
												<li> Nº Passeport : </li>
												<li> Groupe Sanguin : </li>
												<li> Taxe saoudiene : </li>
												<li> Telephone Pelerin : </li>
												<li> Telephone Famille : </li>
												<li> Adresse : </li>
											</ul>
										</div>
										<div class="col-sm-4">
											<ul class="list-unstyled">
												<li><b> {% if medecin.sexe == 'Feminin' %} Madame {% else %} Monsieur {% endif %}</b></li>
												<li><b> {{ medecin.prenom}} </b></li>
												<li><b> {{ medecin.nom}} </b></li>
												<li><b> {{ medecin.datenaiss|date('d/m/Y')}} </b></li>
												<li><b> {% if medecin.lieunaiss is empty %} - {% else %}{{ medecin.lieunaiss}} {% endif %}</b></li>
												<li><b> {% if medecin.numpassport is empty %} - {% else %}{{ medecin.numpassport }} {% endif %}</b></li>
												<li><b> {% if medecin.bloodgroup is empty %} - {% else %}{{ medecin.bloodgroup}} {% endif %}</b></li>
												<li><b> {% if medecin.numsaoudiantax is empty %} - {% else %}{{ medecin.numsaoudiantax}} {% endif %}</b></li>
												<li><b> {% if medecin.phone is empty %} - {% else %}{{ medecin.phone}} {% endif %}</b></li>
												<li><b> {% if medecin.famillyphone is empty %} - {% else %}{{ medecin.famillyphone}} {% endif %}</b></li>
												<li><b> {% if medecin.adresse is empty %} - {% else %}{{ medecin.adresse}} {% endif %}</b></li>
											</ul>
										</div>
										<div class="col-sm-4">
											{% if medecin.image is not empty %}
												<img src="{{ asset('images/'~ medecin.image.url)}}" alt="{{ medecin.image.alt}}" class="rounded-circle" />
												&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
												&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
												<button type='button' class='btn btn-primary' id="selectimage" onclick="selectphoto()" style="margin-top:15px;"><i class='fa fa-edit'></i> <i class='fa fa-image'></i> Modifier photo </button>
												{{ form_start(form, {'attr': {'id': 'form'}}) }}
												{{ form_widget(form.file)}}
												{{ form_rest(form) }}
												{{ form_end(form) }}
											{% else %}
												<img src="{{ asset('images/avatar.jpg')}}" alt="Photo pèlerin" class="rounded-circle" /></br>
												&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
												&nbsp;&nbsp;&nbsp;&nbsp;
												<button type='button' class='btn btn-success' id="selectimage" onclick="selectphoto()" style="margin-top:15px;"><i class='fa fa-image'></i> Ajouter photo </button>
												{{ form_start(form, {'attr': {'id': 'form'}}) }}
												{{ form_widget(form.file)}}
												{{ form_rest(form) }}
												{{ form_end(form) }}
											{% endif %}
											</div>
											</div>
											</div>
                                    </div>
									
									<div class="panel panel-success">
                                    <div class="panel-heading">
                                     <i class="fa fa-credit-card"></i> Formalit&eacute;</a>
                                      
                                    </div>
                                        <div class="panel-body">
										<div class="row">
										<div class="col-lg-12">
										</div>
										</div>
										</div>
										</div>
							
                           
                        </div>
                        <!-- .panel-body -->
                    </div>
				<!-- cadrage formoulaire  --> 
                    
						 
						<!-- fin cadrage formulaire --> 
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
{% endblock %}