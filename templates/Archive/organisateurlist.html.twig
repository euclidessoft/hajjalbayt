{% extends "MecqueBundle::layout.html.twig" %}
{% block organisation %} class="nav-item dropright active" {% endblock %}
{% block body %}
	<div class="row">
		<div class="col-lg-12">
                        <h1 class="page-header">{{ session}} |Organisateur(s)</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
				<div class="row">
				<div class="col-lg-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover">
                                <thead>
								<tr>
                                        <th>Photo</th>
                                        <th>Prenom</th>
                                        <th>Nom</th>
                                        <th>Nº Passeport</th>
										<th>Taxe saoudiene</th>
                                        <th>Telephone Pelerin</th>
                                    </tr>
                                </thead>
                                <tbody> 
								{% if organisateurs is not empty %}
									{% for organisateur in organisateurs %}
										{% if organisateur.sexe == 'Masculin' %}
										<tr class="info">
										{% else %}
										<tr class="danger">
										{% endif %}
										<td>
										{% if organisateur.image is not empty %}
												<a href="{{ path('Mecque_ArchiveOrganisateur', { organisateur : organisateur.id, saison : session})}}"><img src="{{ asset('images/'~ organisateur.image.url)}}" alt="{{ organisateur.image.alt}}" class="rounded-circle" width="75"/></a>
											{% else %}
												<a href="{{ path('Mecque_ArchiveOrganisateur', { organisateur : organisateur.id, saison : session})}}"><img src="{{ asset('images/avatar.jpg')}}" alt="Photo pèlerin" class="rounded-circle" width="75"/></a>
											{% endif %}
										</td>
										<td><a href="{{ path('Mecque_ArchiveOrganisateur', { organisateur : organisateur.id, saison : session})}}">{{ organisateur.prenom}}</a></td>
										<td><a href="{{ path('Mecque_ArchiveOrganisateur', { organisateur : organisateur.id, saison : session})}}">{{ organisateur.nom}}</a></td>
										<td><a href="{{ path('Mecque_ArchiveOrganisateur', { organisateur : organisateur.id, saison : session})}}">{{ organisateur.numpassport}}</a></td>
										<td><a href="{{ path('Mecque_ArchiveOrganisateur', { organisateur : organisateur.id, saison : session})}}">{{ organisateur.numsaoudiantax}}</a></td>
										<td><a href="{{ path('Mecque_ArchiveOrganisateur', { organisateur : organisateur.id, saison : session})}}">{{ organisateur.phone}}</a></td>
										
										</tr>
									{% endfor %}
								{% else %}
									<tr><td colspan="8">Aucun Pelerin</td></tr>
								{% endif %}
                                    
                                </tbody>
                            </table>
                          </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
				</div>
{% endblock %}				