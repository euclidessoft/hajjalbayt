{% extends "accueil.html.twig" %}
{% block home %} class="active" {% endblock %}
{% block body %}

{% for message in app.session.flashbag.get('notice') %}
<div class="col-lg-8 offset-lg-2 mt-5 mb-5">
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{ message|trans }}
    </div>
</div>
{% endfor %}
<div class="col-lg-8 offset-lg-2 mt-5 mb-5">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 mt-3 mb-3">
            <div class="card border-green">
                <div class="card-header bg-green text-white">
                    <div class="row">
                        <div class="col-12">
                            <a href="{{ path('Mecque_Medical_Antecedent') }}" class="text-light">
                                <i class="fa fa-briefcase-medical fa-5x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-right">
                            <div class="text-bold">{{ medicaux }}</div>
                            <div>
                                {{ 'Avec antécédents'|trans }}
                                <br>
                                {{ 'médicaux'|trans }}
                                <br>
                                &nbsp;
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light bt-green">
                    <span class="float-left">
                        <a href="{{ path('Mecque_Medical_Antecedent') }}" class="text-green">
                            {{ 'Voir les détails'|trans }}
                        </a>
                    </span>
                    <span class="float-right">
                        <a href="{{ path('Mecque_Medical_Antecedent') }}" class="text-green">
                            <i class="fa fa-arrow-circle-right fa-lg"></i>
                        </a>
                    </span>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 mt-3 mb-3">
            <div class="card border-green">
                <div class="card-header bg-success-light text-green">
                    <div class="row">
                        <div class="col-12">
                            <a href="{{ path('Mecque_Medical_Chirurgie') }}" class="text-green">
                                <i class="fa fa-cut fa-5x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-right">
                            <div class="text-bold">{{ chirurgi}}</div>
                            <div>
                                {{ 'Avec antécédents'|trans }}
                                <br>
                                {{ 'chirurgicaux'|trans }}
                                <br>
                                &nbsp;
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light bt-green">
                    <span class="float-left">
                        <a href="{{ path('Mecque_Medical_Chirurgie') }}" class="text-green">
                            {{ 'Voir les détails'|trans }}
                        </a>
                    </span>
                    <span class="float-right">
                        <a href="{{ path('Mecque_Medical_Chirurgie') }}" class="text-green">
                            <i class="fa fa-arrow-circle-right fa-lg"></i>
                        </a>
                    </span>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 mt-3 mb-3">
            <div class="card border-warning">
                <div class="card-header bg-warning-light text-warning">
                    <div class="row">
                        <div class="col-12">
                            <a href="{{ path('Mecque_Medical_Psy') }}" class="text-warning">
                                <i class="fa fa-capsules fa-5x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-right">
                            <div class="text-bold">{{ psy }}</div>
                            <div>
                                {{ 'Avec antécédents'|trans }}
                                <br>
                                {{ 'psychiatriques'|trans }}
                                <br>
                                &nbsp;
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light bt-warning">
                    <span class="float-left">
                        <a href="{{ path('Mecque_Medical_Psy') }}" class="text-warning">
                            {{ 'Voir les détails'|trans }}
                        </a>
                    </span>
                    <span class="float-right">
                        <a href="{{ path('Mecque_Medical_Psy') }}" class="text-warning">
                            <i class="fa fa-arrow-circle-right fa-lg"></i>
                        </a>
                    </span>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 mt-3 mb-3">
            <div class="card border-danger">
                <div class="card-header bg-danger-light text-danger">
                    <div class="row">
                        <div class="col-12">
                            <a href="{{ path('Mecque_Medical_Charriot') }}" class="text-danger">
                                <i class="fa fa-wheelchair fa-5x"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-right">
                            <div class="text-bold">{{ charriot}}</div>
                            <div>
                                {{ 'Ayant besoin'|trans }}
                                <br>
                                {{ 'de charriot'|trans }}
                                <br>
                                &nbsp;
                            </div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="card-footer bg-light bt-danger">
                        <span class="float-left">
                            <a href="{{ path('Mecque_Medical_Charriot') }}" class="text-danger">
                                {{ 'Voir les détails'|trans }}
                            </a>
                        </span>
                        <span class="float-right">
                            <a href="{{ path('Mecque_Medical_Charriot') }}" class="text-danger">
                                <i class="fa fa-arrow-circle-right fa-lg"></i>
                            </a>
                        </span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 mt-3 mb-3">
            <div class="card border-secondary">
                <div class="card-header bg-default bb-secondary">
                    <div class="row">
                        <div class="col-12">
                            <a href="{{ path('Mecque_Medical_Enceinte') }}" class="text-dark">
                                <img src="{{ asset('images/pregnant.png')}}" alt="Femme enceinte" height="100">
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-right mt-n3">
                            <div class="text-bold">{{ enceinte }}</div>
                            <div>
                                {% if enceinte > 1 %}
                                {{ 'Femmes'|trans }}
                                {% else %}
                                {{ 'Femme'|trans }}
                                {% endif %}
                                <br>
                                {% if enceinte > 1 %}
                                {{ 'enceintes'|trans }}
                                {% else %}
                                {{ 'enceinte'|trans }}
                                {% endif %}
                                <br>
                                &nbsp;
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light bt-default">
                    <span class="float-left">
                        <a href="{{ path('Mecque_Medical_Enceinte') }}" class="text-dark">
                            {{ 'Voir les détails'|trans }}
                        </a>
                    </span>
                    <span class="float-right">
                        <a href="{{ path('Mecque_Medical_Enceinte') }}" class="text-dark">
                            <i class="fa fa-arrow-circle-right fa-lg"></i>
                        </a>
                    </span>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock%}
