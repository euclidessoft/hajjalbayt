{% extends "layout.html.twig" %}
{% block agence %} class="nav-item dropright active" {% endblock %}
{% block body %}
<div class="row">
	<div class="col-sm-12">
		<h1 class="page-header">{{ 'liste des agence'|trans }}</h1>
	</div>
	<!-- /.col-sm-12 -->
</div>
<br>
<div class="row">
	<div class="col-lg-10 col-lg-offset-1">
		<div class="panel panel-success">
			<div class="panel-heading">
				{{ 'liste des agences'|trans }}
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
					<thead>
						<tr>
							<th>{{ 'Nom'|trans }}</th>
							<th>{{ 'Adresse'|trans }}</th>
							<th>{{ 'Email'|trans }}</th>
							<th>{{ 'Téléphone'|trans }}</th>
							<th>{{ 'Utilisateur'|trans }}</th>
							<th>{{ 'Modifier'|trans }}</th>
							<th>{{ 'Supprimer'|trans }}</th>
						</tr>
					</thead>
					<tbody>
						{% if agences is not empty %}
						{% for agence in agences %}
						<tr>
							<td data-label="{{ 'Prénom'|trans }}">{{ agence.nom }}</td>
							<td data-label="{{ 'Nom'|trans }}">{{ agence.adresse }}</td>
							<td data-label="{{ 'Téléphone'|trans }}">{{ agence.email }}</td>
							<td data-label="{{ 'Commission'|trans }}">{{ agence.phone }} F CFA</td>
							<td data-label="{{ 'Téléphone'|trans }}">
								<a href="" class="btn btn-success"> <i class="fa fa-users"></i> {{ agence.users|length}} {{ 'utilisatuers'|trans }}</a>
							</td>
							<td data-label="{{ 'Modifier'|trans }}">
								<a href="#">
									<button class="btn btn-primary"> <i class="fa fa-edit"></i> {{ 'Modifier'|trans }}</button>
								</a>
							</td>
							<td data-label="{{ 'Supprimer'|trans }}">
								<button class="btn btn-danger" onclick="deleteagence({{ agence.id }})">
									<i class="fa fa-trush"></i> {{ 'Supprimer'|trans }}
								</button>
						</tr>
						{% endfor %}
						{% else %}
						<tr>
							<td data-label="colspan" colspan="5">{{ 'Aucun agence'|trans }}</td>
						</tr>
						{% endif %}

					</tbody>
				</table>
			</div>
			<!-- /.panel-body -->
		</div>
		<!-- /.panel -->
	</div>
</div>
{% endblock %}
