{% extends "layout.html.twig" %}
{% block admin %} class="active"{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Administration</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-8">
            <!-- cadrage formoulaire  -->
            <div class="panel panel-info">
                <div class="panel-heading">
                    Ajouter Nouvel Utilisateur
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2">
                            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }}
                                  method="POST">
                                <div class="form-group">
                                    <label>{{ 'Nom d\'utilisateur :'|trans }}</label>
                                    {{ form_widget(form.username) }}
                                    {{ form_errors(form.username) }}
                                </div>
                                <div class="form-group">
                                    <label>{{ 'Email:'|trans }}</label>
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>
                                <div class="form-group">
                                    <label>{{ 'Mot de Passe :'|trans }}</label>
                                    {{ form_widget(form.plainPassword.first) }}
                                    {% if form_errors(form.plainPassword) %}
                                        <div class="alert alert-danger">password non conforme</div>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label>{{ 'Confirmation:'|trans }}</label>
                                    {{ form_widget(form.plainPassword.second) }}
                                </div>
                                {{ form_rest(form) }}
                                <button type="submit" class="btn btn-primary btn-md pull-right"><span
                                            class="glyphicon glyphicon-send"></span> Envoyer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
