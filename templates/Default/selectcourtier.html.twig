{% extends "layout.html.twig" %}
{% block title %} {{ 'Paiement courtier'|trans }} - Hajjalbayt {% endblock %}
{% block courtier %} class="nav-item dropright active" {% endblock %}
{% block finance %} class="nav-item dropright active" {% endblock %}
{% block body %}

<div class="col-md-8 offset-md-2 mt-5 mb-5 fond-7">
    <h3 class="mt-4 mb-5 text-bold">
        <i class="fa fa-money-bill"></i>
        <i class="fa fa-angle-double-right"></i>
        <i class="fa fa-user-friends mr-2"></i>
        {{ 'Paiement courtier'|trans }}
    </h3>
    <table class="table table-success-light table-striped table-bordered table-hover mt-4">
        <thead>
            <tr>
                <th>{{ 'Prénom'|trans }}</th>
                <th>{{ 'Nom'|trans }}</th>
                <th class="text-center">{{ 'Téléphone'|trans }}</th>
                <th class="text-center">{{ 'Paiement'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% if courtiers is not empty %}
            {% for courtier in courtiers %}
            {% if courtier.courtier is not null%}
            <tr>
                <td data-label="{{ 'Prénom'|trans }}">
                    {{ courtier.courtier.prenom }}
                </td>
                <td data-label="{{ 'Nom'|trans }}">
                    {{ courtier.courtier.nom }}
                </td>
                <td data-label="{{ 'Téléphone'|trans }}" class="phone">
                    {{ courtier.courtier.phone }}
                </td>
                <td data-label="{{ 'Paiement'|trans }}">
                    <a href="{{ path('Mecque_PayementCourtier', {id : courtier.courtier.id}) }}">
                        <button class="btn btn-shadow btn-td btn-green">
                            <i class="fa fa-money-bill"></i>
                            <i class="fa fa-sign-in-alt ml-n1"></i>
                            {{ 'Paiement'|trans }}
                        </button>
                    </a>
                </td>
            </tr>
            {% endif %}
            {% endfor %}
            {% else %}
            <tr>
                <td data-label="colspan" colspan="4">
                    {{ 'Aucun courtier à payer'|trans }}
                </td>
            </tr>
            {% endif %}

        </tbody>
    </table>
</div>

{% endblock %}
