{% extends "accueil.html.twig" %}
{% block title %} {{ 'Nouvelle Session'|trans }} - Hajjalbayt {% endblock %}
{% block session %} class="nav-item dropright active" {% endblock %}
{% block body %}

<div class="row">
    <div class="col-12">
        <div class="col-md-4 offset-md-4 mt-5 fond-7">
            <h3 class="mt-4 mb-5 text-bold">
                <i class="fa fa-calendar-plus mr-2"></i>
                {{ 'Nouvelle Session'|trans }}
            </h3>
            <div class="col-md-10 offset-md-1 mb-4">

                {{form_start(form, {'attr':{'id': 'form'}})}}

                <div class="form-group mt-4">
                    {{ form_row(form.designation, {'attr':{'placeholder':'Nom de la nouvelle Session'}, 'label':false})}}
                </div>

            </div>
        </div>
        <div class="col-md-4 offset-md-4 mt-4 mb-5 pt-3 pb-2 fond-7">
            <div class="centrer">
                <div class="row">
                    <button class="btn btn-shadow btn-green btn-normal mb-2 mr-3" id="send" onclick="envoi()">
                        <i class="fa fa-save"></i>
                        {{ 'Enregistrer'|trans }}
                    </button>

                    <button type="reset" class="btn btn-shadow btn-danger btn-normal mb-2">
                        <i class="fa fa-undo"></i>
                        {{ 'Effacer'|trans }}
                    </button>
                    {{ form_rest(form) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}
