{% extends "accueil.html.twig" %}
{% block title %} {{ 'Commentaire'|trans }} - Hajjalbayt {% endblock %}
{% block courtier %} class="nav-item dropright active" {% endblock %}
{% block body %}

<div class="row">
    <div class="col-12">
        <div class="col-lg-8 offset-lg-2 mt-5 fond-7">
            <h3 class="mt-4 mb-5 text-bold">
                <i class="fa fa-comments"></i>
                {{ 'Commentaire'|trans }}
            </h3>

            <div class="col-lg-10 offset-lg-1">
                {% for message in app.session.flashbag.get('notice') %}
                <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black mb-4">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {{ message|trans }}
                </div>
                {% endfor %}
                {{form_start(form, {'attr':{'id': 'form'}})}}
                <div class="form-group mt-4">
                    {{ form_row(form.objet, {'label' : false, 'attr':{'placeholder': 'Objet'}})}}
                </div>
                <div class="form-group mt-4 mb-5">
                    {{ form_row(form.message, {'label' : false, 'attr':{'placeholder': 'Votre message', 'cols' : 30, 'rows' : 10}})}}
                </div>
            </div>
        </div>
        <div class="col-lg-8 offset-lg-2 mt-4 mb-5 pt-3 pb-2 fond-7">
            <div class="centrer">
                <div class="row">
                    <button type="button" class="btn btn-shadow btn-normal btn-green mb-2 mr-3" onclick="envoie()" id="send">
                        <i class="fa fa-paper-plane"></i>
                        {{ 'Envoyer'|trans }}
                    </button>
                    <button type="reset" class="btn btn-shadow btn-normal btn-danger mb-2">
                        <i class="fa fa-undo"></i>
                        {{ 'Effacer'|trans }}
                    </button>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
