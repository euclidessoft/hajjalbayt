{% extends "accueil.html.twig" %}
{% block title %} {{ 'Nouvelle réservation'|trans }} - Hajjalbayt {% endblock %}
{% block pelerin %} class="nav-item dropright active" {% endblock %}
{% block body %}

    <div class="row">
        <div class="col-12">
            {% for message in app.session.flashbag.get('notice') %}
                <div class="col-md-6 offset-md-3 mt-5">
                    <div class="alert alert-danger alert-dismissible row radius-10 shadow-black fade show">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        {{ message|trans }}
                    </div>
                </div>
            {% endfor %}
            <div class="col-md-6 offset-md-3 mt-5 fond-7">
                <h3 class="mt-4 mb-5 text-bold">
                    <i class="fa fa-user-clock mr-2"></i>
                    {{ 'Nouvelle réservation'|trans }}
                </h3>
                <div class="col-md-10 offset-md-1 mb-5">
                    <h6 class="mt-4 text-danger">
                        {{ 'Les champs marqués par * sont obligatoires'|trans }}
                    </h6>
                    {{ form_start(form, {'attr':{'id': 'form'}}) }}

                    <div class="form-group mt-4">
                        {{ form_row(form.prenom, {'attr':{'placeholder':'Prénom *'}, 'label':false}) }}
                    </div>
                    <div class="form-group mt-4">
                        {{ form_row(form.nom, {'attr':{'placeholder':'Nom *'}, 'label':false}) }}
                    </div>
                    <div class="form-group mt-4">
                        {{ form_row(form.sexe, {'label':false}) }}
                    </div>
                    <div class="form-group mt-4">
                        {{ form_row(form.phone, {'attr':{'placeholder':'Téléphone *'}, 'label':false}) }}
                    </div>
                    <div class="form-group mt-4">
                        {{ form_row(form.adresse, {'label':false, attr:{'placeholder':'Adresse'}}) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6 offset-md-3 mt-4 mb-5 pt-3 pb-2 fond-7">
                <div class="centrer">
                    <button type="button" class="btn btn-shadow btn-green btn-normal mb-2 mr-3" id="send"
                            onclick="envoie()">
                        <i class="fa fa-save"></i>
                        {{ 'Enregistrer'|trans }}
                    </button>
                    <a href="{{ path('Mecque_PelerinWating') }}" class="btn btn-shadow btn-warning btn-normal mb-2">
                        <i class="fa fa-undo"></i>
                        {{ 'Annuler'|trans }}
                    </a>
                    {{ form_rest(form) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
