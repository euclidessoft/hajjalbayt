{% extends 'security.html.twig' %}
{% block title %} {{ 'RÃ©initialisation mot de passe'|trans }} - Hajjalbayt {% endblock %}
{% block body %}

<div class="col-lg-10 offset-lg-1">
    {% for message in app.flashes('notice')%}
    <div class="alert alert-success alert-dismissible fade show radius-10 shadow-black mt-2">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{ message }}
    </div>
    {% endfor%}

    {{ form_start(form)}}
    <div class="form-group mt-4">
        {{ form_row(form.password, {'label':false, 'attr' : { 'placeholder' : 'Nouveau mot de passe', 'autofocus':'autofocus'}}) }}
    </div>
    <div class="form-group mt-4">

        {{ form_row(form.confirm, {'label':false, 'attr' : { 'placeholder' : 'Confirmer mot de passe'}})}}
    </div>
    <div class="centrer mt-4">
        <button type="submit" class="btn btn-shadow btn-green mt-4 mb-4 pl-4 pr-4">
            <i class="fa fa-save"></i>
            {{ 'Enregistrer'|trans }}
        </button>
    </div>
    {{ form_rest(form)}}
    {{ form_end(form)}}
</div>

{% endblock %}
