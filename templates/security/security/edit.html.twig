{% extends 'accueil.html.twig' %}
{% block title %} {{ 'Modification profil'|trans }} - Hajjalbayt {% endblock %}
{% block body %}

<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-6 offset-lg-3 mt-5 fond-7">
            <h4 class="mt-4 mb-5 text-bold">
                <i class="fa fa-user-edit"></i>
                {{ 'Modification profil'|trans }}
            </h4>
            <div class="col-lg-8 offset-lg-2">
                {{ form_start(form) }}
                <div class="form-group mt-4">
                    {{ form_row(form.prenom, {'attr':{'placeholder':'Prénom'}, 'label':false}) }}
                </div>
                <div class="form-group mt-4">
                    {{ form_row(form.nom, {'attr':{'placeholder':'Nom'}, 'label':false}) }}
                </div>
                <div class="form-group mt-4">
                    {{ form_row(form.adresse, {'attr':{'placeholder':'Adresse'}, 'label':false}) }}
                </div>
                <div class="form-group mt-4 mb-5">
                    {{ form_row(form.phone, {'attr':{'placeholder':'Téléphone'}, 'label':false}) }}
                </div>
            </div>
        </div>
        <div class="col-lg-6 offset-lg-3 mt-4 mb-5 pt-3 pb-2 fond-7">
            <div class="centrer">
                <div class="row">
                    <button type="submit" class="btn btn-shadow btn-normal btn-green mb-2 mr-3">
                        <i class="fa fa-save"></i>
                        {{ 'Enregistrer'|trans }}
                    </button>
                    <a href="{{ path('security_profile')}}" class="btn btn-shadow btn-normal btn-warning mb-2">
                        <i class="fa fa-undo"></i>
                        {{ 'Annuler'|trans }}
                    </a>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
